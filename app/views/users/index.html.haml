= content_for :title, "#{t('club_name')} - #{t('user.list').capitalize}"
.row
  .col-md-12
    %h2= t('user.list')
%hr
.row
  .col-md-12
    .panel.panel-default
      .panel-heading= t('user.list')
      .panel-body
        .row
          .col-lg-12.col-md-12.col-sm-12.col-xs-12.pull-right
            = link_to t('user.new'), new_user_path,
              class: "btn btn-success pull-right"
        .row.margin-top
          .col-md-12
            %table.table.table-striped.table-bordered.table-hover.fixedlayout
              %thead
                %tr
                  %th= t('activerecord.attributes.user.email')
                  %th.hidden-sm.hidden-xs{colspan: 2}= t('actions.actions')
              %tbody
                - @users.each do |user|
                  %tr
                    %td= user.email
                    %td.text-center.hidden-sm.hidden-xs
                      = link_to t('actions.edit'),
                        edit_user_path(user),
                        class: "btn btn-info btn-sm"
                    %td.text-center.hidden-sm.hidden-xs
                      - unless user == current_user
                        = link_to t('actions.destroy'), user, method: :delete,
                          class: "btn btn-danger btn-sm",
                          data: { confirm: t('actions.confirm') }
