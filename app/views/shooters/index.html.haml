.container 
  %h1= t(:list_of_shooters, scope: :shooters)

  = link_to t(:new_shooter, scope: :shooters), new_shooter_path, class: "btn btn-primary btn-sm"

  %table.table
    %thead
      %tr
        %th= t(:first_name_last_name, scope: :shooters)
        %th{colspan: 3}= t('actions.actions')
      
    %tbody
    - @shooters.each do |shooter|
      %tr
        %td= [shooter.first_name, shooter.last_name].join(' ')
        %td= link_to t('actions.show'), '#'
        %td= link_to t('actions.edit'), '#', class: "btn btn-info btn-sm"
        %td= link_to t('actions.destroy'), '#', class: "btn btn-danger btn-sm"

= paginate @shooters

