.row
  .col-md-12
    %h2= t('mainmenu.admin_panel')

%hr
.row
  .col-md-12
    .panel.panel-default
      .panel-heading= t('activerecord.models.app_config')
      .panel-body
        = image_tag(club_logo, size: '125',
          class: "user-image img-responsive") unless club_logo.blank?
        = form_for @app_config, html: {multipart: true} do |f|
          .col-md-4.col-md-offset-4
            .form-group
              = f.label :club_logo, class: "col-md-offset-4 control-label"
              = f.file_field :club_logo, class: "btn btn-default btn-file"
            .form-group
              = f.label :club_name, class: "col-md-offset-4 control-label"
              = f.text_field :club_name, class: "form-control"
            .form-group
              = f.submit class: "col-md-offset-3 btn btn-primary"
