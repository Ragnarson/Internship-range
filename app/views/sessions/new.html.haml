= content_for :title, "#{t('club_name')} - #{t('signin')}"
.col-md-4.col-md-offset-4
  #signin-box
    .well
      %h4.text-center= t('actions.signin')
      %hr
      = bootstrap_form_tag url: sessions_path,
        layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-8" do |f|
        = f.email_field :email,
          label: t('activerecord.attributes.user.email').capitalize
        = f.password_field :password,
          label: t('activerecord.attributes.user.password').capitalize
        = f.form_group do
          = f.submit t('actions.signin')
