= content_for :title, "#{t('club_name')} - #{t('payments.list_of_payments').capitalize}"
.container
  %h1= t('payments.list_of_payments')

  = link_to t('payments.new_payment'), new_payment_path, class: "btn btn-primary btn-sm btn pull-right"

  %table.table
    %thead
      %tr
        %th= t('payments.description')
        %th= t('payments.payment_date')
        %th= t('payments.payment_expiry_date')
        %th= t('payments.amount')
        %th= t('payments.name_of_shooter')
        %th{colspan: 3}= t('payments.actions')
    %tbody
      - @payments.each do |payment|
        %tr
          %td= link_to payment.description, payment
          %td= payment.date
          %td= payment.expiry_date
          %td= change_to_currency(payment.amount)
          %td= link_to payment.by, payment.shooter
          %td= link_to t('actions.edit'), edit_payment_path(payment), class: "btn btn-info btn-sm"
          %td= link_to t('actions.destroy'), payment, class: "btn btn-danger btn-sm",
            method: :delete,
            data: { confirm: t('actions.confirm') }
          - if payment.expired?
            %td= link_to I18n.t('payments.send'), payment, class: "btn btn-success",
              method: :post,
              data: { confirm: t('actions.confirm') }
