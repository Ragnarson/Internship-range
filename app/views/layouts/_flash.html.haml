- if flash.notice
  .alert.alert-success.alert-dismissable
    %button{type: 'button',
    class: 'close',
    'data-dismiss' => 'alert',
    'aria-hidden' => 'true'}
      &times
    = notice
- if flash.alert
  .alert.alert-danger.alert-dismissable
    %button{type: 'button',
    class: 'close',
    'data-dismiss' => 'alert',
    'aria-hidden' => 'true'}
      &times
    = alert
