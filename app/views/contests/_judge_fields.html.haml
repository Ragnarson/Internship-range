.row.fields-row
  %fieldset
    .col-xs-3
      = f.text_field :first_name, class: "form-control", id: "first-name",
        placeholder: t('activerecord.attributes.contest.first_name'),
        required: true
    .col-xs-3
      = f.text_field :last_name, class: "form-control",
        placeholder: t('activerecord.attributes.contest.last_name'),
        required: true
    .col-xs-2
      = f.text_field :function, class: "form-control",
        placeholder: t('activerecord.attributes.contest.function'),
        required: true
    .col-xs-2
      = f.number_field :license_number, class: "form-control",
        placeholder: t('activerecord.attributes.contest.license_number'),
        required: true
    .col-xs-2
      = f.hidden_field :_destroy
      = link_to '',
        '#', class: "glyphicon glyphicon-trash remove_fields btn btn-danger pull-right"
