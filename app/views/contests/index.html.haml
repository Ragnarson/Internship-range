.container
  %h1 Listing contests

  = link_to 'New contest', '#'

  %table.table
    %thead
      %tr
        %th Name
        %th Date
        %th(colspan=3) Actions

    %tbody
      - @contests.each do |contest|
        %tr
          %td= contest.name
          %td= contest.date
          %td= link_to 'Show', '#'
          %td= link_to 'Edit', '#'
          %td= link_to 'Destroy', '#'
