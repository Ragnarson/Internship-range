= content_for :title, "#{t('club_name')} - #{t('activerecord.models.contest').capitalize}"
%h1= t('activerecord.models.contest').capitalize

= link_to "#{t('contest.actions.new')} #{t('activerecord.models.contest')}", new_contest_path, class: 'btn btn-primary btn pull-right'

%table.table
  %thead
    %tr
      %th= t('activerecord.attributes.contest.name')
      %th= t('activerecord.attributes.contest.date')
      %th(colspan=2)= t('contest.actions.actions')

  %tbody
    - @contests.each do |contest|
      %tr
        %td= link_to contest.name, contest
        %td= contest.date
        %td= link_to t('contest.actions.edit'), edit_contest_path(contest), class: "btn btn-info btn-sm"
        %td= link_to t('contest.actions.destroy'), contest, method: :delete, data: { confirm: I18n.t('actions.confirm') }, class: "btn btn-danger btn-sm"

= paginate @contests
