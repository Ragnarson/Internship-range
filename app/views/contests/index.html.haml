= content_for :title, "#{t('club_name')} - #{t('activerecord.models.contest').capitalize}"
%h1= t('activerecord.models.contest').capitalize

= link_to "#{t('contest.actions.new')} #{t('activerecord.models.contest')}", new_contest_path

%table.table
  %thead
    %tr
      %th= t('activerecord.attributes.contest.name')
      %th= t('activerecord.attributes.contest.date')
      %th(colspan=3)= t('contest.actions.actions')

  %tbody
    - @contests.each do |contest|
      %tr
        %td= contest.name
        %td= contest.date
        %td= link_to t('contest.actions.show'), contest
        %td= link_to t('contest.actions.edit'), edit_contest_path(contest), class: "btn btn-info btn-sm"
  = paginate @contests
